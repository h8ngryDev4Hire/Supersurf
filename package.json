{
  "name": "supersurf",
  "version": "0.6.4",
  "private": true,
  "description": "MCP browser automation for autonomous AI agents",
  "license": "Apache-2.0",
  "workspaces": [
    "server",
    "extension"
  ],
  "scripts": {
    "build.server": "cd server && npm run build",
    "build.extension": "cd extension && npm run build",
    "build": "npm run build.server && npm run build.extension",
    "dev.server": "cd server && npx tsx src/cli.ts --debug",
    "test.server": "cd server && npm test",
    "test.extension": "cd extension && npm test",
    "test": "npm run test.server && npm run test.extension",
    "mcp": "claude mcp add supersurf -- node server/dist/cli.js",
    "start": "chromium --load-extension=./extension --user-data-dir=/tmp/supersurf-profile",
    "filesize": "find ./{extension,server} -type f ! -path \"*/node_modules/*\" ! -path \"*/dist/*\" ! -name \"package-lock.json\" -exec wc -l {} + | sort -nr",
    "version.bump": "npx tsx scripts/version.bump.ts"
  }
}
