{
  "manifest_version": 3,
  "name": "SuperSurf",
  "version": "0.6.3",
  "description": "Browser automation for AI agents via MCP",
  "permissions": [
    "alarms",
    "debugger",
    "activeTab",
    "tabs",
    "storage",
    "management",
    "webRequest",
    "webNavigation",
    "scripting",
    "tabGroups",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "action": {
    "default_title": "SuperSurf",
    "default_popup": "dist/popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content-script.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}
